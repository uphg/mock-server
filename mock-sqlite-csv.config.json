{
  "port": 3000,
  "baseUrl": "/api",
  "delay": 0,
  "cors": true,
  "mockDir": "./data",
  "routes": [
    {
      "path": "/sqlite/users",
      "method": "GET",
      "description": "获取 SQLite 用户列表",
      "responseFile": "example.db",
      "sqliteQuery": {
        "table": "users",
        "limit": 10
      }
    },
    {
      "path": "/sqlite/products",
      "method": "GET",
      "description": "获取 SQLite 产品列表",
      "responseFile": "example.db",
      "sqliteQuery": {
        "table": "products",
        "limit": 10
      }
    },
    {
      "path": "/sqlite/users/:id",
      "method": "GET",
      "description": "获取 SQLite 用户详情",
      "responseFile": "example.db",
      "sqliteQuery": {
        "query": "SELECT * FROM users WHERE id = ?",
        "params": ["{{params.id}}"]
      }
    },
    {
      "path": "/sqlite/products/category/:category",
      "method": "GET",
      "description": "获取 SQLite 按分类筛选产品",
      "responseFile": "example.db",
      "sqliteQuery": {
        "query": "SELECT * FROM products WHERE category = ?",
        "params": ["{{params.category}}"]
      }
    },
    {
      "path": "/csv/users",
      "method": "GET",
      "description": "获取 CSV 用户列表",
      "responseFile": "example-users.csv",
      "csvConfig": {
        "columns": true,
        "skip_empty_lines": true
      }
    },
    {
      "path": "/csv/products",
      "method": "GET",
      "description": "获取 CSV 产品列表",
      "responseFile": "example-products.csv",
      "csvConfig": {
        "columns": true,
        "skip_empty_lines": true
      }
    },
    {
      "path": "/csv/users/department/:department",
      "method": "GET",
      "description": "获取 CSV 按部门筛选用户",
      "responseFile": "example-users.csv",
      "csvConfig": {
        "columns": true,
        "skip_empty_lines": true
      },
      "response": {
        "data": "{{responseFile}}",
        "filtered": "{{#filterByDepartment responseFile params.department}}{{/filterByDepartment}}"
      }
    },
    {
      "path": "/csv/products/category/:category",
      "method": "GET",
      "description": "获取 CSV 按分类筛选产品",
      "responseFile": "example-products.csv",
      "csvConfig": {
        "columns": true,
        "skip_empty_lines": true
      },
      "response": {
        "data": "{{responseFile}}",
        "filtered": "{{#filterByCategory responseFile params.category}}{{/filterByCategory}}"
      }
    }
  ]
}